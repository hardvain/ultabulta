<div class="app " ui-view="" ng-controller="AppCtrl">
  <div class="deep-purple bg-big ">
    <div ui-view="" class="fade-in-down smooth ">
      <div class="center-block w-xxl w-auto-xs p-v-md ">
        <div class="center-block w-xxl w-auto-xs p-v-md">
          <div class="navbar">
            <div class="navbar-brand m-t-lg text-center">

              <span class="m-l inline">Ulta Bulta</span>
            </div>
          </div>
          <div class="p-lg panel md-whiteframe-z1 text-color m">
            <div class="m-b text-sm">
              Sign in to your Ulta Bulta Account
            </div>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                <div class="md-form-group">
                  <%= f.email_field :email, autofocus: true, :class => "md-input " %>
                  <label>Email</label>
                </div>
                <div class="md-form-group">
                  <% if @validatable %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br/>
                  <%= f.password_field :password, autocomplete: "off", :class => "md-input" %>
                  <label>Password</label>
                </div>

                <% if devise_mapping.rememberable? -%>
                    <div class="m-b-md">
                      <label class="md-check">
                        <input name="user[remember_me]" type="hidden" value="0">
                        <input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me"><i class="deep-purple"></i>
                        <label for="user_remember_me">Remember me</label>
                      </label>
                    </div>
                <% end -%>

                <div class="actions">
                  <%= f.submit "Log in", :class => "md-btn md-raised deep-purple btn-block p-h-md" %>
                </div>
            <% end %>
          </div>
          <%= render "devise/shared/links" %>

        </div>

      </div>
    </div>
  </div>
</div>

